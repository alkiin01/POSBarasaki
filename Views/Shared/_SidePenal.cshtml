
@functions {
    public string IsActive(string controller)
    {
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        return currentController == controller ? "active" : "";
    }
}
<div class="sidebar-wrapper" style="height:100vh">
    <div>
        <div class="logo-wrapper">
            <a asp-controller="StarterKit" asp-action="Layoutlight"><img class="img-fluid for-light" src="../assets/images/logo/logo.png" alt="logo"><img class="img-fluid for-dark" src="../assets/images/logo/logo-dark.png" alt="logo-dark"></a>
            <div class="back-btn"><i class="fa fa-angle-left"></i></div>
            <div class="toggle-sidebar"><i class="status_toggle middle sidebar-toggle" data-feather="align-left"> </i></div>
        </div>
        <div class="logo-icon-wrapper"><a asp-controller="StarterKit" asp-action="Layoutlight"><img class="img-fluid for-light" src="../assets/images/logo/logo-icon.png" alt="logo-icon"><img class="img-fluid for-dark" src="../assets/images/logo/logo-icon-dark.png" alt="logo-icon-dark"></a></div>
        <nav class="sidebar-main">
            <div class="left-arrow" id="left-arrow"><i data-feather="arrow-left"></i></div>
            <div id="sidebar-menu">
                <ul class="sidebar-links" id="simple-bar">
                    <li class="back-btn">
                        <div class="mobile-back text-end"><span>Back</span><i class="fa fa-angle-right ps-2" aria-hidden="true"></i></div>
                    </li>
